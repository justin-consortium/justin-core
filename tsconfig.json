{
  "compilerOptions": {
    "target": "ES2019",
    "module": "NodeNext",
    "declaration": true,             // emit .d.ts files
    "declarationMap": true,          // allows editors step from d.ts back to ts
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "sourceMap": true                // allows for better debugging of your dist
  },
  "include": ["src/**/*"],
 "exclude": [
   "src/**/__tests__/**",
   "src/**/*.test.ts",
   "src/**/*.spec.ts"
 ]
}
